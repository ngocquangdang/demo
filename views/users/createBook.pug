extends ../layouts/common
block   content
    .container
        .now-login
            .content
                h1 Create book
                if  errors 
                    each err in errors
                        .alert.alert-danger= err
                form(action="createBook/create", method="post", enctype="multipart/form-data")
                    .form-group
                        lable(for="name") Name
                        input#name.form-control(type="text", name="name", value=value  ? value.name : '')
                    .form-group
                        lable(for="phone") Price
                        input#phone.form-control(type="text", name="price",  value=value ? value.phone : '')
                    .form-group
                        lable(for="description") Description
                        input#description.form-control(type="text", name="description",  value=value ? value.description : '')
                    .form-group
                        lable(for="img") Image
                        input#img.form-control-file(type="file", name="img")
                    button(class="btn btn-primary" ) Create