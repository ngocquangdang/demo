    .d-flex.align-itms-center
        form.ml-auto(action="/User/search", method="get", class="d-flex")
            input(type="text", name="q" ,class="form-control")
            button(class="btn btn-primary ml-2" ) Search
    h1 
        span User
        a.btn.btn-primary.ml-4(href="/User/create") Create
    table.table
        tr
            th Image
            th Name
            th Phone
            th Actions
        each val in users
            tr
                td
                    img(src= val.image,width="64")
                td= val.name
                td= val.phone
                td
                    a.btn.btn-light(href="/User/" + val.id)  view