extends ../layouts/common
block   content
    .container
        .now-login
            .content
                h1 Create User
                if  errors 
                    each err in errors
                        .alert.alert-danger= err
                form(action="/create", method="post", enctype="multipart/form-data")
                    .form-group
                        lable(for="name") Name
                        input#name.form-control(type="text", name="name", value=value  ? value.name : '')
                    .form-group
                        lable(for="name") Email
                        input#name.form-control(type="text", name="email", value=value  ? value.email : '')
                    .form-group
                        lable(for="phone") Phone
                        input#phone.form-control(type="text", name="phone",  value=value ? value.phone : '')
                    .form-group
                        lable(for="name") Password
                        input#name.form-control(type="password", name="password")
                    .form-group
                        lable(for="img") Image
                        input#img.form-control-file(type="file", name="img")
                    button(class="btn btn-primary" ) Create
