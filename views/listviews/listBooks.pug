extends ../layouts/common

block  content
    .container
        .header-res-collection
            h2.title New Book

        .now-list-restaurant
            .list-restaurant
                each val in book 
                    .item-restaurant
                        a.item-content(target='_blank', href='/' + val.id)
                            .img-restaurant
                                img(src= val.image)
                            .info-restaurant
                                .info-basic-res
                                    h4.name-res(title= val.name)= val.name
                                p.content-promotion
                                    i.fas.fa-tag= val.price +'Ä‘'
        if pages > 0
            nav(aria-label='Page navigation example')
                ul.pagination
                    if current  === 1
                        li.page-item
                            a.page-link Previous
                    else
                        li.page-item
                            a.page-link(href='/book:1') Previous

                    //- page 1 -> n       
                    - var i = (Number(current) > 5 ? Number(current) - 4 : 1)
                    if i!== 1
                        li.disabled
                            a ...
                    each i in (Number(current) + 4)  
                        each i in pages
                    
                            if i == current
                                a.page-link= i 
                            else
                                li.page-item
                                    a.page-link(href='/book:' + i) 1
                            if (i == Number(current) + 4 && i < pages)
                                li.disabled
                                    a ...
                    //- page 1 -> n  

                    if current === pages
                        li.page-item
                            a.page-link Next
                    else
                        li.page-item
                            a.page-link(href='/book:' + pages)  Next     


