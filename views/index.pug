extends ./layouts/common

block  content
    .container.pt-1
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            form.form-inline.my-2.my-lg-0(action="/search", method="get")
                input.form-control.mr-sm-2(type='search',name = 'q', placeholder='Search', aria-label='Search')
                button(class="btn btn-primary ml-2" ) Search
                
    .container
        //- h3 Điện Thoại - Máy Tính Bảng
        #myCarousel.carousel.slide(data-ride='carousel')
            // Indicators
            ol.carousel-indicators
                li.active(data-target='#myCarousel', data-slide-to='0')
                li(data-target='#myCarousel', data-slide-to='1')
                li(data-target='#myCarousel', data-slide-to='2')
            // Wrapper for slides
            .carousel-inner
                .item.active
                    img(src='img/3.jpg', alt='', style='width:100%;')
                .item
                    img(src='img/2.jpg', alt='', style='width:100%;')
                .item
                    img(src='img/1.jpg', alt='', style='width:100%;')
            // Left and right controls
            a.left.carousel-control(href='#myCarousel', data-slide='prev')
                span.glyphicon.glyphicon-chevron-left
                span.sr-only Previous
            a.right.carousel-control(href='#myCarousel', data-slide='next')
                span.glyphicon.glyphicon-chevron-right
                span.sr-only Next

        .content
            .title-gachchan
                span.title1 DEALS 24H 
                ul.nav.navbar-nav.navbar-right.hidden-xs
                    li
                        a(href='') Văn Học 
                    li
                        a(href='') Kỹ Năng 
                    li
                        a(href='') Kinh Tế
            br
            //- .row
            //-     each val in book
            //-         .col-md-2.col-sm-3.col-xs-6
            //-             a(href='/' + val.id)
            //-                 img.thumbnail.img-responsive(src= val.image)
            //-             .caption
            //-                 h5.card-title= val.name
            //-                 hr
            //-                 span.card-text= val.price +'đ'
            .now-list-store.deal-tab            
                .list-store
                    each val in book
                        .item-store
                            a.item-content(target='_blank', href='/' + val.id)
                                .img-store
                                    img(src= val.image)
                                .info-store
                                    .info-basic-res
                                        h4.name-res(title= val.name)= val.name
                                    p.content-promotion
                                        i.fas.fa-tag= val.price +'đ'
                                    
            .row
                .col-sm-12.text-center
                    a(href='/book/1') XEM THÊM
        hr            
